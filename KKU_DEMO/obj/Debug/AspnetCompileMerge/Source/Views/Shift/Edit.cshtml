@model KKU_DEMO.Models.ViewModels.ShiftCreateModel

<script>
    $(document).ready(function() {
        $('.selectpicker').selectpicker();
    });
    $(document).ready(function() {
        $('.datapicker').datapicker();
    });
</script>

 @{
     List<SelectListItem> stateList = new List<SelectListItem>();
     stateList.Add(new SelectListItem() { Text = "Выполняется", Value = "INPROCESS" });
     stateList.Add(new SelectListItem() { Text = "Заведена", Value = "ASSIGNED" });
     stateList.Add(new SelectListItem() { Text = "Закончена", Value = "CLOSED" });
 }

    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h2>Изменить смену</h2>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Edit", "Shift", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div style="margin: auto; top: 0; right: 0;bottom: 0;left: 0; width: 300px;" id="Form">
                        <h2>Изменить смену</h2>

                        @Html.ValidationSummary(false)


                        <div class="form-group">
                            <b>Завод:</b>
                            <div >
                                @Html.DropDownListFor(model => model.FactoryId, Model.FactoryList, new { @class = "selectpicker" , data_style = "btn-inverse" })

                            </div>
                        </div>

                        <div class="form-group">
                            <b>Номер смены:</b>
                            <div>
                                @Html.DropDownListFor(model => model.Number, Model.NumberList, new { @class = "selectpicker" })
                            </div>
                        </div>
                        <div class="form-group">
                            <b>Мастер Смены:</b>
                            <div>
                                @Html.DropDownListFor(model => model.UserId, Model.MasterList, new { @class = "selectpicker" })
                            </div>
                        </div>

                        <div class="form-group">
                            <b>Дата:</b>
                            <div>
                                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 220px;" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <b>Статус:</b>
                            <div>
                                @Html.DropDownListFor(model => model.State, stateList, new { @class = "selectpicker" })

                            </div>
                        </div>

                        <div class="form-group">
                            <b>Общая выработка:</b>
                            <div>
                                @Html.EditorFor(model => model.TotalShiftWeight, new {htmlAttributes = new {@class = "form-control"}})

                            </div>
                        </div>
                        <div class="form-group">
                            <b>Процент выхода:</b>
                            <div>
                                @Html.EditorFor(model => model.ProductionPct, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>


                        <div class="form-group" style="display: inline-block;  padding-left: 70px;">
                            <div>
                                <input type="submit" value="Изменить" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">

                <button id="modalClose" type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
            </div>
        </div>

    </div>



