@model KKU_DEMO.Models.Incident

@{
  
    Layout = null;
}


@{
    List<SelectListItem> CauseList = new List<SelectListItem>();


    foreach (var i in ViewBag.CauseList)

    {
        CauseList.Add(new SelectListItem() { Text = i.Name.ToString(), Value = i.Id.ToString() });
    }
}

@using (Html.BeginForm("SetCause", "Incident", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(false)

    <div class="form-group">
        <b>Причина:</b>
        <div>
            @Html.DropDownListFor(model => model.CauseId, CauseList)
        </div>
    </div>
    <div class="form-group">
       
        <div>
            @Html.HiddenFor(model => model.Id, CauseList)
        </div>
    </div>

    <div class="form-group">

        <div>
            @Html.HiddenFor(model => model.Time, CauseList)
        </div>
    </div>

    <div class="form-group" style="display: inline-block;  padding-left: 70px;">
        <div>
            <input type="submit" value="Определить" class="btn btn-success" />
        </div>
    </div>
}